@model List<Social.Application.Files.DocsModel>

<div class="accordion" id="accordionExample">
    <i>Максимальный размер файла 5 мегабайтов.</i>
    <br />
    <i>Доступные расширения файлов: .pdf, .jpg, .tiff, .doc, .docx</i>
    <div class="card">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Документы ребенка
                </button>
            </h5>
        </div>
        <div id="collapseOne" class="collapse " aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">

                <div class="alert alert-secondary">
                    <label>@Model[0].LabelName</label>
                    <div class="custom-file">
                        <input refs="file" type="file" asp-for="@Model[0].FileBody" class="custom-file-input" id="customFileLang" lang="ru" onchange="ValidateSize(this)" accept=".jpg, .jpeg, .png, .pdf, .tiff, .doc, .docx">
                        <label class="custom-file-label" for="customFileLang" data-browse="Обзор"></label>
                        <input asp-for="@Model[0].FileId" type="hidden" class="form-control" placeholder="ID документа">
                    </div>
                </div>
